<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".BillsList"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MainText"
        android:id="@+id/BillsListTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="36sp"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/BillsListTitle"
        android:id="@+id/billsTable">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BillName"
                android:id="@+id/txtBill"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/PaymentDate"
                android:id="@+id/txtPaymentDate"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_weight="2"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Amount"
                android:id="@+id/txtAmount"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_weight="2"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
