<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cl.afiebig.billsreminder.AddNewBill">

    <TableLayout android:id="@+id/footer" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bill Name"
                android:id="@+id/lvlBillName"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
            />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textBillName"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"
                android:layout_column="1"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:id="@+id/lvlComment"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textComment"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"
                android:layout_column="1"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Date"
                android:id="@+id/lvlPaymentDate"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder Date"
                android:id="@+id/lvlReminderDate"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_column="1"
                android:layout_weight="1"
                />

        </TableRow>
        <TableRow>
            <DatePicker
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/datePaymentDay"
                android:layout_weight="1"
                android:calendarViewShown="false"
                />
            <DatePicker
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/dateReminderDay"
                android:layout_weight="1"
                android:calendarViewShown="false"
                android:layout_column="1"
                />
        </TableRow>
    </TableLayout>

</RelativeLayout>
